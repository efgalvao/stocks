<p id="notice"><%= notice %></p>

<h1>Balances</h1>

<table>
  <thead>
    <tr>
      <th>Balance</th>
      <th>Date</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @balances.each do |balance| %>
      <tr>
        <td><%= balance.balance %></td>
        <td><%= balance.date %></td>
        <td><%= balance.account.name.upcase %></td>
        <td><%= link_to 'Detalhes',  account_balance_path(id: balance.id) %></td>
        <td><%= link_to 'Alterar', edit_account_balance_path(id: balance.id) %></td>
        <td><%= link_to 'Destroy', account_balance_path(id: balance.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

