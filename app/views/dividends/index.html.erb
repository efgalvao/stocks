<p id="notice"><%= notice %></p>

<div class="title">
  Dividends
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Value</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dividends.each do |dividend| %>
      <tr>
        <td><%= dividend.date.strftime('%d %B - %Y') %></td>
        <td><%= dividend.value %></td>
        <td><%= dividend.stock.name %></td>
        <td><%= link_to 'Edit', edit_dividend_path(dividend), :class => "btn btn-warning" %>
        <%= link_to 'Delete', stock_dividend_path(stock_id: dividend.stock.id, id: dividend.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dividend', new_dividend_path, :class => "btn btn-success" %>
