<p id="notice"><%= notice %></p>

<h1>Dividends</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Value</th>
      <th>Facade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dividends.each do |dividend| %>
      <tr>
        <td><%= dividend.date %></td>
        <td><%= dividend.value %></td>
        <td><%= dividend.facade_id %></td>
        <td><%= link_to 'Ver', facade_dividend_path(id: dividend.id) %></td>
        <td><%= link_to 'Alterar', edit_facade_dividend_path(id: dividend.id) %></td>
        <td><%= link_to 'Destroy', facade_dividend_path(id: dividend.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

