<p id="notice"><%= notice %></p>

<div class="title">
  Prices
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Stock</th>
      <th>Date</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.stock.name %></td>
        <td><%= price.date.strftime('%d %B - %Y') %></td>
        <td><%= price.price %></td>
        <td><%= link_to 'Edit', edit_stock_price_path(id: price.id, stock_id: price.stock.id), :class => "btn btn-warning" %>
        <%= link_to 'Delete', stock_price_path(id: price.id, id: price.id, stock_id: price.stock.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />
<%= link_to 'Register new quote price', new_price_path, :class => "btn btn-success" %>
