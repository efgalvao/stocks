<%= form_for @quote do |form| %>
  <% if quote.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(quote.errors.count, "error") %> prohibited this quote from being saved:</h2>

      <ul>
        <% quote.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group">
      <%= form.label :aquisition_date, class: "input-group-text" %>
      <%= form.date_field :aquisition_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :aquisition_value, class: "input-group-text" %>
      <%= form.text_field :aquisition_value, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :stock_id, class: "input-group-text" %>
      <%= form.collection_select(:stock_id, Stock.all, :id, :name, {}, {class: "custom-select"}) %>
    </div>

    <div class="form-group">
      <%= form.label :quantity, class: "input-group-text" %>
      <%= number_field_tag 'quantity', 0, { class: "custom-select" } %>
    </div>

    <div class="form-group">
      <%= form.submit class: "btn btn-success" %>
    </div>
  </form>
<% end %>
