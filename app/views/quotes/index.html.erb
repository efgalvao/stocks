<p id="notice"><%= notice %></p>

<div class="title">
  Quotes
</div>

<% @stocks.each do |stock| %>

<table class="table table-hover">
  <label class="table table-title"> Quotes for <%= stock.name %>: </label>
  <thead>

    <tr>
      <th>Aquisition date</th>
      <th>Aquisition value</th>
      <th>Stock</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% stock.quotes.each do |quote| %>
      <tr>
        <td><%= quote.aquisition_date.strftime('%d %B - %Y') %></td>
        <td><%= quote.aquisition_value %></td>
        <td><%= quote.stock.name %></td>
        <td><%= link_to 'Edit', edit_quote_path(id: quote.id), :class => "btn btn-warning" %>
        <%= link_to 'Remove', quote_path(id: quote.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>

<%= link_to 'New Quote', new_quote_path,  :class => "btn btn-success" %>
