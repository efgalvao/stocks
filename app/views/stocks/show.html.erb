<p id="notice"><%= notice %></p>

<h1>
    <%= @stock.name %> Details
</h1>

<% if !@stock.quotes.blank? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th> Aquisition Date </th>
        <th> Aquisition Value </th>
        <th> Actions </th>
      </tr>
    </thead>
    <tbody>
      <% for quote in @stock.quotes %>
      <tr>
        <td> <%= quote.aquisition_date %> </td>
        <td> <%= quote.aquisition_value %> </td>
        <td> <%= link_to "Edit", edit_quote_path(id: quote.id), :class => "btn btn-warning"  %>
             <%= link_to 'Delete', quote_path(id: quote.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
      <% end %>
    </tbody>
  </table>
<% else %>
<h2> No quotes for this Stock <h2>
<% end %>

<div class="buttons">
  <%= link_to 'Edit Stock', edit_stock_path(@stock), :class => "btn btn-warning" %> 

  <%= link_to 'Delete Stock', @stock, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger"  %>

</div>

<%= link_to 'Back', stocks_path, :class => "btn btn-primary" %>
