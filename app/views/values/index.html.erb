<p id="notice"><%= notice %></p>

<h1>Values for <%= Facade.find(params[:facade_id]).name %></h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Value</th>
      <th>Facade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @values.each do |value| %>
      <tr>
        <td><%= value.date %></td>
        <td><%= value.value %></td>
        <td><%= value.facade_id %></td>
        <td><%= link_to 'Show', facade_value_path(id: value.id) %></td>
        <td><%= link_to 'Edit', @value %></td>
        <td><%= link_to 'Destroy', @value, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Value', new_facade_value_path %>
